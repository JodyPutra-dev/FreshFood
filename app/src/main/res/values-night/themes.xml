<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark mode variant of Theme.FreshFood -->
    <style name="Theme.FreshFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Override colors for dark mode (lighter shades for better contrast) -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary_yellow</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <item name="colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/text_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <item name="colorError">@color/status_spoiled</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOutline">@color/divider</item>

        <!-- Window styling for dark mode -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Widget defaults (inherit from values/themes.xml) -->
        <item name="materialButtonStyle">@style/Widget.FreshFood.Button</item>
        <item name="materialCardViewStyle">@style/Widget.FreshFood.Card</item>
    </style>

    <!-- All TextAppearance and Widget styles inherit from values/themes.xml -->
    <!-- They automatically adapt to dark mode via theme attribute resolution -->

</resources>
