<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    style="@style/Widget.FreshFood.Card"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageFood"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/title_scan"
            android:layout_marginEnd="8dp"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/textFruitType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FreshFood.Title"
            app:layout_constraintStart_toEndOf="@id/imageFood"
            app:layout_constraintTop_toTopOf="@id/imageFood"
            app:layout_constraintEnd_toStartOf="@id/textConfidence"
            app:layout_constraintHorizontal_bias="0"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/textFreshnessLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fresh"
            android:textAppearance="@style/TextAppearance.FreshFood.Caption"
            android:textColor="@color/white"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            app:layout_constraintStart_toEndOf="@id/imageFood"
            app:layout_constraintTop_toBottomOf="@id/textFruitType"
            app:layout_constraintBaseline_toBaselineOf="@id/textFreshnessLabel" />

        <TextView
            android:id="@+id/textScanDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FreshFood.Caption"
            app:layout_constraintStart_toEndOf="@id/imageFood"
            app:layout_constraintTop_toBottomOf="@id/textFreshnessLabel"
            app:layout_constraintBottom_toBottomOf="@id/imageFood"
            app:layout_constraintEnd_toStartOf="@id/textConfidence"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/textConfidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FreshFood.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
