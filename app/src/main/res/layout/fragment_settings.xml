<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Information Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_app_info"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_lightbulb"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_lightbulb"
                    android:layout_marginBottom="8dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/textAppVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version 1.0"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:gravity="center"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Model Updates Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_model_updates"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_current_models"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textModelVersions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_loading_versions"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:paddingBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCheckUpdates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_check_updates"
                    app:icon="@drawable/ic_analytics" />

                <ProgressBar
                    android:id="@+id/progressBarUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    style="@style/Widget.FreshFood.ProgressBar" />

                <TextView
                    android:id="@+id/textUpdateStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:visibility="gone"
                    tools:text="Checking for updates..." />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contribution Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_contribution"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:paddingBottom="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_food"
                    android:layout_marginBottom="8dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_help_improve"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:gravity="center"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textContributionCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_contribution_count_none"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:gravity="center"
                    android:paddingBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonHelpTrain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_contribute_data"
                    app:icon="@drawable/ic_lightbulb" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>